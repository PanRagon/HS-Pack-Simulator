{
    "author": "Christian Iversen",
    "babel": {
        "plugins": [
            "@babel/plugin-proposal-class-properties"
        ],
        "presets": [
            [
                "@babel/env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ],
            "@babel/react"
        ]
    },
    "dependencies": {
        "body-parser": "latest",
        "express": "4.17.1",
        "express-session": "1.17.0",
        "express-ws": "4.0.0",
        "jest-websocket-mock": "^2.0.2",
        "mock-socket": "^9.0.3",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "react-router": "5.1.2",
        "react-router-dom": "5.1.2"
    },
    "devDependencies": {
        "@babel/cli": "7.7.4",
        "@babel/core": "7.7.4",
        "@babel/plugin-proposal-class-properties": "7.7.4",
        "@babel/preset-env": "7.7.4",
        "@babel/preset-react": "7.7.4",
        "babel-jest": "24.9.0",
        "babel-loader": "8.0.6",
        "concurrently": "^5.3.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "jest": "24.9.0",
        "jsdom": "^16.2.2",
        "nodemon": "2.0.1",
        "react-addons-test-utils": "^15.6.2",
        "supertest": "4.0.2",
        "webpack": "4.41.2",
        "webpack-cli": "3.3.10",
        "webpack-dev-server": "^3.11.0"
    },
    "engines": {
        "node": "^14.0.0"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.(js|jsx)"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests/jest-setup.js"
        ],
        "testEnvironment": "node",
        "testRegex": "tests/.*-test\\.(js|jsx)$"
    },
    "license": "LGPL-3.0",
    "main": "index.js",
    "name": "hearthstone-pack-simulator",
    "repository": {},
    "scripts": {
        "build": "webpack --mode production",
        "dev": "concurrently \"yarn watch:client\" \"yarn watch:server\"",
        "start": "node src/server/server.js",
        "test": "jest --coverage",
        "watch:client": "webpack --watch --mode development",
        "watch:server": "nodemon src/server/server.js --watch src/server --watch public/bundle.js"
    },
    "version": "1.0.0"
}
